{
  "name": "abilis",
  "version": "1.0.0",
  "description": "CSS and JS front-end open source library",
  "main": "dist/js/abilis.umd.js",
  "module": "dist/js/abilis.esm.js",
  "sass": "scss/abilis.scss",
  "style": "dist/css/abilis.css",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist/js",
    "build": "rollup -c",
    "lint": "eslint '**/*.js'",
    "lint:fix": "prettier --write $PWD/'src/**/*.js' --single-quote"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skyleen77/abilis.git"
  },
  "keywords": [
    "css",
    "js",
    "library"
  ],
  "author": "Elliot Sutton a.k.a Skyleen77",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Skyleen77/abilis/issues"
  },
  "homepage": "https://github.com/Skyleen77/abilis#readme",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.9"
  },
  "engines": {
    "node": ">=8"
  }
}
